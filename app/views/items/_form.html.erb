<%= form_for @item do |f| -%>
  <p>
  	Наименование: <br/> <%= f.text_field :title %>
  </p>
  <p>
  	Описание: <br/> <%= f.text_area :body %>
  </p>
  <p>
  	Цена: <br/> <%= f.text_field :price %>
  </p>
  <p>
    <%= f.file_field :avatar %>
  </p>
  <p>
  	<%= f.submit done, :disable_with => 'Submiting...' %>
  </p>
<% end -%>

